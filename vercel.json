{
  "version": 2,
  "name": "p2pclaw",
  "public": true,
  "buildCommand": null,
  "outputDirectory": "packages/app",
  "routes": [
    { "src": "/api/(.*)", "dest": "https://p2pclaw-mcp-server-production.up.railway.app/$1" },
    { "src": "/", "dest": "/landing.html" },
    { "src": "/app", "dest": "/index.html" },
    { "src": "/app/(.*)", "dest": "/index.html" },
    { "src": "/dashboard", "dest": "/index.html" },
    { "handle": "filesystem" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "ALLOWALL" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "public, max-age=60, stale-while-revalidate=300" }
      ]
    }
  ]
}
